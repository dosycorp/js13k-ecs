{
    "name": "js13k-ecs",
    "description": "Tiny 1kb entity component system, designed for js13k",
    "keywords": [
        "entity component system",
        "ecs",
        "js13k"
    ],
    "repository": "github:kutuluk/js13k-ecs",
    "author": "Evgeniy Pavlov <mail@kutuluk.com>",
    "license": "MIT",
    "version": "0.1.0",
    "source": "src/index.js",
    "main": "dist/index.js",
    "module": "dist/index.m.js",
    "files": [
        "src",
        "dist"
    ],
    "scripts": {
        "clean": "rimraf dist lib && mkdirp dist lib",
        "microbundle": "microbundle --name ecs --sourcemap false && microbundle -o lib -f cjs --compress false",
        "example": "microbundle -i ./example/src/app.js -o ./example/bundle.js -f cjs --compress true --sourcemap false",
        "build": "npm-run-all --silent clean microbundle",
        "lint": "eslint src",
        "release": "npm install && npm-run-all --silent lint build && npm publish"
    },
    "devDependencies": {
        "eslint": "^5.3.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-import": "^2.8.0",
        "microbundle": "^0.6.0",
        "mkdirp": "^0.5.1",
        "npm-run-all": "^4.1.2",
        "rimraf": "^2.6.2"
    }
}
